#!/usr/bin/env bash

ORIGINAL_DIR=$(pwd)
BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3
NODE_MODULES_PATH=$BUILD_DIR"/node_modules"
PROTECTED_DIR=$(cat $ENV_DIR/NODE_MODULES_PROTECTED_DIR)

echo "BUILD_DIR"
echo $BUILD_DIR

echo "CACHE_DIR"
echo $CACHE_DIR

echo "ENV_DIR"
echo $ENV_DIR

echo "ORIGINAL_DIR"
echo $ORIGINAL_DIR

echo "NODE_MODULES_PATH"
echo $NODE_MODULES_PATH

echo "PROTECTED_DIR"
echo $PROTECTED_DIR

echo "-----> Deleting the node_modules folder (except $PROTECTED_DIR)..."
cd $NODE_MODULES_PATH
ls | grep -v "$PROTECTED_DIR" | xargs rm -rf
cd $ORIGINAL_DIR
echo "       Done!"
